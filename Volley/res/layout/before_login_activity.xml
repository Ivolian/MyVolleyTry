<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp" android:layout_weight="3"
                  android:background="@color/mainColor"
                  android:orientation="vertical"
                  android:gravity="center">

        <ImageView android:layout_width="160dp"
                   android:layout_height="160dp"
                   android:src="@drawable/logo"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Volley"
                  android:textColor="@color/white"
                  android:textSize="40dp"/>

        <TextView android:layout_marginTop="10dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="让工作变得简单"
                  android:textColor="@color/white"
                  android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp" android:layout_weight="2"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:gravity="center">

        <Button android:id="@+id/btnLogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textColor="@color/white"
                android:background="@drawable/os_bbuton_info"/>

        <Button android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/white"
                android:background="@drawable/os_bbuton_primary"
                android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>